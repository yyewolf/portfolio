---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  class?: string;
}

const { href, external, underline = true, class: className, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn(
    "inline-block text-current hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-300 ease-in-out", 
    underline && "relative after:absolute after:bottom-0 after:left-0 after:w-full after:h-[1px] after:bg-current after:origin-bottom-right after:scale-x-0 hover:after:origin-bottom-left hover:after:scale-x-100 after:transition-transform after:duration-300 after:ease-in-out",
    className
  )}
  {...rest}>
  <slot/>
</a>
